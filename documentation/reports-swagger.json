                  "target_user_id": {
                    "type": "integer",
                    "example": 2
                  },
                  "reason": {
                    "type": "string",
                    "example": "this user shows violence"
                  },
                  "created_at": {
                    "type": "string",
                    "format": "date-time",
                    "example": "2021-04-05T20:26:02.000Z"
                  }
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "A report is created successfully",
            "schema": {
              "reportData": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "integer",
                    "example": 1
                  },
                  "sourse_user_id": {
                    "type": "integer",
                    "example": 1
                  },
                  "target_user_id": {
                    "type": "integer",
                    "example": 2
                  },
                  "reason": {
                    "type": "string",
                    "example": "this user shows violence"
                  },
                  "created_at": {
                    "type": "string",
                    "format": "date-time",
